pulic class MinSubArray {
public static void main(String[] args) {
int arr[]= {-2,-3,4,-1,-2,1,5};
		int n=arr.length;
		int minsum=Integer.MAX_VALUE;                   //n subarray sum
		int cursum=0;
		int end=0,start=0;
		for(int i=0;i<n;i++) {
			cursum=cursum+arr[i];
			if(cursum>minsum) { 
				minsum=cursum;
				end=i;
			}
			if(cursum<0) {
				cursum=0;
				start=i+1;
			}
		}
		System.out.println(minsum);
		for(int i=start;i<=end;i++) {
			System.out.print(arr[i]+"Â ");
		}
}
}
