import java.util.*;
public class AlphaHill {
public static void main(String[] args) {
Scanner sc=new Scanner(System.in);
System.out.println("Enter number of rows:"); 
int n=sc.nextInt();
char c='A';
for(int i=0;i<n;i++) {
for(int j=n-i;j>1;j--) {
System.out.print(" ");
}
for(int j=0;j<=i;j++) {
System.out.print((char) (c+j));
}
for(int j=i-1;j>=0;j--) {
System.out.print((char)(c+j));
}
System.out.println();
}
}
}
